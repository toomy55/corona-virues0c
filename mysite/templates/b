    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <script>

      $(function () {

        var $daily_chart = $("#daily_chart");
        $.ajax({
          url: $daily_chart.data("url"),
          success: function (data) {

            var ctx = $daily_chart[0].getContext("2d");

            new Chart(ctx, {
              type: 'line',
              data: {
                labels: data.labels1,
                datasets: [{
                  label: 'عدد الاصابات اليومي',
                  backgroundColor: 'rgba(255,0,0,0.5)',
                  borderColor: 'red',
                  borderWidth: 2,
                  borderDash: [],
                  borderDashOffset: 0.0,
                  pointBackgroundColor: 'red',
                  pointBorderColor: 'rgba(255,255,255,0)',
                  pointHoverBackgroundColor: 'red',
                  pointBorderWidth: 20,
                  pointHoverRadius: 4,
                  pointHoverBorderWidth: 15,
                  pointRadius: 4,
                  data: data.data1
                }]          
              },
              options: {
                responsive: true,
                legend: {
                  position: 'top',
                },
                title: {
                  display: true,
                  text: 'Corona'
                }
              }
            });

          }
        });

      });


  $(function () {

      var $avreg_chart = $("#avreg_chart");
      $.ajax({
        url: $avreg_chart.data("url"),
        success: function (data) {

          var ctx = $avreg_chart[0].getContext("2d");

          new Chart(ctx, {
            type: 'doughnut',
            data: {
              labels: data.labels2,
              datasets: [{
                label: 'معدل الحالات',
                backgroundColor:[   '#e60000','orangered', '#00ff00'],
                borderColor: '#525f7f',
                borderWidth: 2,
                borderDash: [],
                borderDashOffset: 0.0,
                pointBackgroundColor: 'red',
                pointBorderColor: '#6c757d',
                pointHoverBackgroundColor: '#6c757d',
                pointBorderWidth: 20,
                pointHoverRadius: 4,
                pointHoverBorderWidth: 15,
                pointRadius: 4,
                data: data.data2
              }]          
            },
            options: {
              responsive: true,
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Corona'
              }
            }
          });

        }
      });

  });


    $(function () {

      var $manths_chart = $("#manths_chart");
      $.ajax({
        url: $manths_chart.data("url"),
        success: function (data) {
        
          var ctx = $manths_chart[0].getContext("2d");

          new Chart(ctx, {
            type: 'bar',
            responsive: true,
            legend: {
              display: false
            },
            data: {
              labels: data.labels3 ,
              datasets: [{
                label: ' معدل الاصابات في الشهر',
                backgroundColor:'rgba(255,0,0,0.5) ',
                borderColor: 'red',
                borderWidth: 2,
                borderDash: [],
                borderDashOffset: 0.0,
                pointBackgroundColor: 'red',
                pointBorderColor: 'rgba(255,255,255,0)',
                pointHoverBackgroundColor: 'red',
                pointBorderWidth: 20,
                pointHoverRadius: 4,
                pointHoverBorderWidth: 15,
                pointRadius: 4,
                data: data.data3
              }]          
            },
            options: {
              responsive: true,
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Corona'
              }
            }
          });

        }
      });

    });
$(function () {

var $week_chart = $("#week_chart");
$.ajax({
  url: $week_chart.data("url"),
  success: function (data) {

    var ctx = $week_chart[0].getContext("2d");

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: data.labels4,
        datasets: [{
          label: 'عدد الاصابات في الاسبوع',
          backgroundColor: 'rgba(255,0,0,0.5)',
          borderColor: 'red',
          borderWidth: 2,
          borderDash: [],
          borderDashOffset: 0.0,
          pointBackgroundColor: 'red',
          pointBorderColor: 'rgba(255,255,255,0)',
          pointHoverBackgroundColor: 'red',
          pointBorderWidth: 20,
          pointHoverRadius: 4,
          pointHoverBorderWidth: 15,
          pointRadius: 4,
          data: data.data4
        }]          
      },
      options: {
        responsive: true,
        legend: {
          position: 'top',
        },
        title: {
          display: true,
          text: 'Corona'
        }
      }
    });

  }
});

});


